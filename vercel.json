{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build"
        },
        {
            "src": "backend/main.py",
            "use": "@vercel/python"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/frontend/dist/index.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/backend/main.py"
        }
    ]
}