{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            },
            "buildCommand": "npm install && npm run build"
        },
        {
            "src": "backend/main.py",
            "use": "@vercel/python",
            "config": {
                "includeFiles": [
                    "backend/requirements.txt"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/main.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/dist/$1"
        }
    ],
    "github": {
        "silent": true
    }
}